<!DOCTYPE html>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Subject</th>
        <th>Description</th>
        <th>Priority</th>
        <th>Status</th>
        <th colspan="3"></th>
    </tr>
    {% for task in tasks %}
        <tr>
            <td>{{ task.id }}</td>
            <td>{{ task.subject }}</td>
            <td>{{ task.description }}</td>
            <td>{{ priorities[task.priority] }}</td>
            <td>{{ statuses[task.status] }}</td>
            <td><a href="/?action=edit&id={{ task.id }}">Edit</a></td>
            <td><a href="/?action=complete&id={{ task.id }}">Complete</a></td>
            <td><a href="/?action=delete&id={{ task.id }}">Delete</a></td>
        </tr>
    {% endfor %}
</table>
<a href="/?action=create">Add</a>